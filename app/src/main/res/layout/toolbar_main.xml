<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    android:id="@+id/toolbar"
    app:titleTextColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/menu_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            app:srcCompat="@drawable/ic_home" />

        <TextView
            android:id="@+id/menu_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/menu_home"
            android:layout_marginLeft="6dp"
            android:text="Home" />

        <ImageView
            android:id="@+id/menu_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/menu_home"
            android:layout_toRightOf="@+id/menu_home"
            app:srcCompat="@drawable/ic_search" />

        <TextView
            android:id="@+id/menu_search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/menu_search"
            android:layout_alignStart="@+id/menu_search"
            android:layout_below="@+id/menu_search"
            android:layout_marginLeft="2dp"
            android:text="Search" />

    </RelativeLayout>

</android.support.v7.widget.Toolbar>